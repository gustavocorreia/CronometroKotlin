<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00:00"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="92sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/tvTimer"
            app:layout_constraintHorizontal_bias="0.495"
            android:layout_marginTop="56dp"/>
    <Button
            android:text="@string/button_iniciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btIniciar"
            app:layout_constraintStart_toStartOf="@+id/tvTimer" app:layout_constraintEnd_toEndOf="@+id/tvTimer"
            android:layout_marginTop="96dp" app:layout_constraintTop_toBottomOf="@+id/tvTimer"/>
    <Button
            android:text="@string/button_parar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btParar"
            app:layout_constraintStart_toStartOf="@+id/btIniciar" app:layout_constraintEnd_toEndOf="@+id/btIniciar"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/btIniciar"
            android:layout_marginTop="92dp"/>
    <Button
            android:text="@string/button_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btResetar"
            app:layout_constraintTop_toBottomOf="@+id/btParar" app:layout_constraintEnd_toEndOf="@+id/btParar"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="@+id/btParar"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.447"/>

</androidx.constraintlayout.widget.ConstraintLayout>